{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./builddir",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./node_modules/@girs", "./types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "builddir"
  ]
}